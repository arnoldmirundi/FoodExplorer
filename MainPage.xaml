<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodExplorer.MainPage"
             Title="FoodExplorer"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <! Header >
            <Label Text="Explore Food by Continent"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#4CAF50"  
                   Margin="0,10,0,30" />

                <! Continent Buttons >
                <Button Text="Asia" 
                    Clicked="OnContinentClicked" 
                    CommandParameter="Asia"
                    BackgroundColor="#FFB74D" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="60"
                    FontSize="18"/>

                <Button Text="Europe" 
                    Clicked="OnContinentClicked" 
                    CommandParameter="Europe"
                    BackgroundColor="#64B5F6" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="60"
                    FontSize="18"/>

                <Button Text="Africa" 
                    Clicked="OnContinentClicked" 
                    CommandParameter="Africa"
                    BackgroundColor="#81C784" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="60"
                    FontSize="18"/>

                <Button Text="North America" 
                    Clicked="OnContinentClicked" 
                    CommandParameter="North America"
                    BackgroundColor="#4DD0E1" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="60"
                    FontSize="18"/>

                <Button Text="South America" 
                    Clicked="OnContinentClicked" 
                    CommandParameter="South America"
                    BackgroundColor="#BA68C8" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="60"
                    FontSize="18"/>

                <Button Text="Australia" 
                    Clicked="OnContinentClicked" 
                    CommandParameter="Australia"
                    BackgroundColor="#FFD54F" 
                    TextColor="Black" 
                    CornerRadius="10"
                    HeightRequest="60"
                    FontSize="18"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>