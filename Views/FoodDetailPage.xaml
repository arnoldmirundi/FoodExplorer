<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodExplorer.Views.FoodDetailPage">
    <VerticalStackLayout Padding="20">
        <Image Source="{Binding ImageUrl}" HeightRequest="200" Aspect="AspectFill"/>
        <Label Text="{Binding Name}" FontSize="24" FontAttributes="Bold"/>
        <Label Text="{Binding Origin}" FontSize="18" TextColor="Gray"/>
        <Label Text="{Binding Description}" FontSize="16"/>
    </VerticalStackLayout>
</ContentPage>
